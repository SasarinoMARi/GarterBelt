<Window x:Class="GarterBelt.Windows.KeyConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GarterBelt.Windows"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="KeyConfigWindow" Height="200" Width="500">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <Label>Target Hide Key</Label>
            <TextBox x:Name="TargetHideKeyText" Width="200"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label>Target Show Key</Label>
            <TextBox x:Name="TargetShowKeyText" Width="200"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label>Window Hide Key</Label>
            <TextBox x:Name="WindowHideKeyText" Width="200"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label>Window Show Key</Label>
            <TextBox x:Name="WindowShowKeyText" Width="200"/>
        </StackPanel>
        <Button x:Name="ConfirmButton" Click="ConfirmButton_Click">Confirm</Button>
    </StackPanel>
</Window>
