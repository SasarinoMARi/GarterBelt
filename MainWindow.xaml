<Window x:Class="GarterBelt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GarterBelt"
        mc:Ignorable="d"
        Icon="icon.ico"
        Title="Remotcon" Height="220" Width="200">
    <Grid>
        <Button x:Name="buttonFindHandle" Content="핸들 찾기" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <Label x:Name="labelHandleId" Content="PID : 0" HorizontalAlignment="Left" Margin="90,8,0,0" VerticalAlignment="Top"/>

        <Button x:Name="buttonHideByHandle" Content="찢기" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <Button x:Name="buttonShowByHandle" Content="붙이기" HorizontalAlignment="Left" Margin="90,40,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>

        <Button x:Name="buttonLoadHandle" Content="불러오기" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <Button x:Name="buttonExportHandle" Content="내보내기" HorizontalAlignment="Left" Margin="90,70,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>


        <Button x:Name="buttonTopmost" Content="맨 위로" HorizontalAlignment="Left" Margin="10,120,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <Button x:Name="buttonNoTopmost" Content="← 해제" HorizontalAlignment="Left" Margin="90,120,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        
        <TextBox x:Name="textboxOpacity" HorizontalAlignment="Left" Margin="10,150,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="buttonOpacity" Content="투명" HorizontalAlignment="Left" Margin="90,150,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>

    </Grid>
</Window>
